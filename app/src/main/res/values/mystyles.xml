<resources>
    <!-- Base application theme. -->
    <style name="txt_m">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="txt_s">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="txt_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_l">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="inputLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="inputHelp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="inputPlaceholder">
        <item name="android:textSize">14sp</item>
        <item name="android:color">#59000000</item>
    </style>

    <style name="textBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="distL">
        <item name="android:layout_marginTop">32dp</item>
    </style>
    <style name="distM">
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="distS">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="btn">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btnbtm</item>
    </style>

    <style name="imgBtn">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="roundImg">
        <item name="android:foreground">@drawable/round_img</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/bg</item>
        <item name="colorOnPrimary">@color/light</item>
    </style>

</resources>