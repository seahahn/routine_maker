<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        >
    <ImageView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/record_action"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/action_title"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
    />
    <TextView
            style="@style/txt_m"
            android:id="@+id/action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행동 제목"
            app:layout_constraintStart_toEndOf="@+id/circle"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
            android:id="@+id/table_layout"
            android:background="@drawable/stts_table_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/action_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp">
        <TableRow
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/sun"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/stts_record_border_leftup"
                    android:layout_margin="1dp"
                    android:textColor="@color/red"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/mon"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/tue"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/wed"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/thu"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/fri"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:text="@string/tableDate"/>
            <TextView
                    android:id="@+id/sat"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/stts_record_border_rightup"
                    android:layout_margin="1dp"
                    android:textColor="@color/blue"
                    android:text="@string/tableDate"/>
        </TableRow>
        <TableRow
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <ImageView
                    android:id="@+id/sunDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/stts_record_border_leftdown"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/monDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/tueDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/wedDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/thuDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/friDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/light"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
            <ImageView
                    android:id="@+id/satDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/stts_record_border_rightdown"
                    android:layout_margin="1dp"
                    android:paddingVertical="4dp"
                    app:srcCompat="@drawable/horizontal_line"
            />
        </TableRow>
    </TableLayout>

    <ImageView
            android:id="@+id/action_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/action_title"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@drawable/stts_green"
    />

</androidx.constraintlayout.widget.ConstraintLayout>