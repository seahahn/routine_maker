<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        >
    <ImageView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/record_action"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/action_title"
            app:layout_constraintBottom_toBottomOf="@+id/action_title"
    />
    <TextView
            style="@style/txt_s"
            android:id="@+id/action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행동 제목" app:layout_constraintStart_toEndOf="@+id/circle"
            app:layout_constraintBottom_toBottomOf="@+id/circle" android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"/>
    <TextView
            style="@style/txt_s"
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" app:layout_constraintStart_toEndOf="@+id/circle"
            app:layout_constraintTop_toBottomOf="@+id/action_title"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
    <TextView
            style="@style/txt_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분"
            app:layout_constraintStart_toEndOf="@+id/num"
            app:layout_constraintBottom_toBottomOf="@+id/num" app:layout_constraintTop_toTopOf="@+id/num"
            android:layout_marginStart="4dp"/>
    <ImageView
            android:id="@+id/action_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/action_title"
            app:layout_constraintBottom_toBottomOf="@+id/num"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@drawable/stts_green"
    />

</androidx.constraintlayout.widget.ConstraintLayout>